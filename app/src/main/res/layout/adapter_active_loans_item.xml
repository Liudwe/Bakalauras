<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/loan_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttnorms_regular"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/next_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Loan taken: 1500€" />

    <TextView
        android:id="@+id/repaid_loan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttnorms_bold"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Repaid loan: 0€" />

    <TextView
        android:id="@+id/next_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttnorms_regular"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Next Payment: 2022.05.08" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttnorms_regular"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Payment amount: 300€" />

</androidx.constraintlayout.widget.ConstraintLayout>